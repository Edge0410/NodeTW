<!DOCTYPE html>
<html lang="ro" id="maintop">

<head>
    <title>Inregistreaza-te - Club Sportiv Luza</title>
    <%- include("../fragments/settings.ejs") %>
</head>

<body>
    <%- include("../fragments/header.ejs")

    %>
    <main>
        <div class="container-basic">
            <br><h3 style="text-align: center">Inregistreaza-te in clubul nostru!</h3><br>

        <% if(!locals.raspuns) { %>    
        <form method="POST" id="formular-inscriere" action="/register" onsubmit="return registerInputCheck()">
            <label for="nume">Nume:</label><br>
            <input type="text" id="nume" name="nume" required><br>
            <label for="prenume">Prenume:</label><br>
            <input type="text" id="prenume" name="prenume" required><br>
            <label for="email">Email:</label><br>
            <input type="text" id="email" name="email" required><br>
            <label for="parola">Parola:</label><br>
            <input type="password" id="parola" name="parola" required><br>
            <label for="varsta">Varsta:</label><br>
            <input type="number" name="varsta" value="10"><br>
            <label for="sport">Alege sportul preferat:</label><br>
            <select id="sport" name="sport">
                <option value="tenis">Tenis</option>
                <option value="fotbal">Fotbal</option>
                <option value="baschet">Baschet</option>
                <option value="alergare">Alergare</option>
            </select><br>
            <input type="submit" value="Trimite">
        </form>
        <% } else { %>
        <p style="text-align: center; font-weight:bold; ">V-ati inregistrat cu succes!</p>
        <% } %>
        </div>

        <br>
    </main>
    <%- include("../fragments/footer.ejs")

    %>
</body>

</html>